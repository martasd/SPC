===Phase 2: Parsing===
* complete (using Sam's version)

translate(IF bexp THEN statement1 ELSE statement2)
  consequent = gen_label();
  alternate = gen_label();
  end = gen_label ();
  translate (bexp, consequent, alternate)
  generate_instruction (_LABEL, consequent, NULL, NULL);
  translate (statement1)
  generate_instruction (JUMP, end, NULL, NULL);
  generate_instruction (_LABEL, alternate, NULL, NULL);
  translate (statement2)
  generate_instruction (JUMP, end, NULL, NULL);
  generate_instruction (_LABEL, end, NULL, NULL);

translate (id, truelabel, falselabel)
  JEQI falselabel id 0
  JUMP truelabel
